<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="true"
         backupStaticAttributes="true"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true"
		 strict="true"
         verbose="true"
         bootstrap="../tests/bootstrap.php">

	<filter>
		<blacklist>
			<directory>./phpBB/ext/fq/boardnotices/tests/</directory>
		</blacklist>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">./phpBB/ext/fq/boardnotices/</directory>
			<exclude>
				<directory suffix=".php">./phpBB/ext/fq/boardnotices/language/</directory>
				<directory suffix=".php">./phpBB/ext/fq/boardnotices/migrations/</directory>
				<directory suffix=".php">./phpBB/ext/fq/boardnotices/styles/</directory>
				<directory suffix=".php">./phpBB/ext/fq/boardnotices/vendor/</directory>
			</exclude>
		</whitelist>
	</filter>

	<php>
		<server name="PHPBB_TEST_DBMS" value="phpbb\db\driver\postgres"/>
		<server name="PHPBB_TEST_DBHOST" value="localhost" />
		<server name="PHPBB_TEST_DBPORT" value="5432" />
		<server name="PHPBB_TEST_DBNAME" value="phpbb_tests" />
		<server name="PHPBB_TEST_DBUSER" value="postgres" />
		<server name="PHPBB_TEST_DBPASSWD" value="" />
		<server name="PHPBB_TEST_REDIS_HOST" value="localhost" />
		<server name="PHPBB_TEST_TABLE_PREFIX" value="phpbb_"/>
		<server name="PHPBB_FUNCTIONAL_URL" value="http://localhost/" />
	</php>
</phpunit>
